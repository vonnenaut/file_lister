<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
</head>

<body>
    <header>
      <h1>List of Files</h1>
        <ul>
          <% @files.each do |file| %>
            <li>
              <a href="<%= file %>"><%= file %></a>
            </li>
          <% end %>
        </ul>
    </header>

    <nav>
      <% if params[:sort] == "desc" %>
        <a href="/">Sort ascending</a>
      <% else %>
        <a href="/?sort=desc">Sort descending</a>
      <% end %>
    </nav>
</body>
</html>
